<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <ContextMenu x:Shared="False" x:Key="AppContextMenu">
        <MenuItem Header="Activate" Command="{Binding ActivateCommand}"/>
        <MenuItem Header="Deactivate" Command="{Binding DeactivateCommand}"/>
        <MenuItem Header="Settings" Command="{Binding ShowSettingsCommand}"/>
        <MenuItem Header="Exit" Command="{Binding ExitCommand}"/>
    </ContextMenu>
    
</ResourceDictionary>